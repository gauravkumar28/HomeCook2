<body class="one-page full-screen">
   <%= javascript_include_tag "application" %>
   <%= render partial: 'layouts/header.html.erb' %>

<div class='container' style="min-height:540px;">
   <% @close = false %>
<% unless @close %> 
<div class="row">
  <!--div class='span1 zero-mobile-size'>
  </div-->
  
  <div class='span2 thirty-five-mobile-width pull-left'>
    <div class='filter has-above-50'>
      <%= check_box_tag 'veg', "veg", true, :onchange => "Filter.applyCheckbox('', #{session[:location_id]});return false;" %>
      <%= label_tag "veg only", nil, class: 'has-left' %></br>
      <%= check_box_tag 'non-veg', "nonveg", true, :onchange => "Filter.applyCheckbox('', #{session[:location_id]});return false;" %>
      <%= label_tag "non veg only", nil, class: 'has-left' %>
      <div class='list-group'>
        <%= link_to "All", {:controller => "chefs", :action => "index"}, class: 'list-group-item special active', :onclick => "Filter.applyType('all', '#all', #{session[:location_id]});return false;", id: 'all' %>
        <%= link_to "Paratha", {:controller => "chefs", :action => "index", :menu_type => "paratha"}, class: 'list-group-item special', :onclick => "Filter.applyType('paratha', '#paratha', #{session[:location_id]});return false;", id: 'paratha' %>
        <%= link_to "Rice", {:controller => "chefs", :action => "index", :menu_type => "rice"}, class: 'list-group-item special', :onclick => "Filter.applyType('rice', '#rice', #{session[:location_id]});return false;", id: 'rice'%>
        <%#= link_to "Gravy", {:controller => "chefs", :action => "index", :menu_type => "gravy"}, class: 'list-group-item special', :onclick => 'Filter.applyType("gravy", "#gravy");return false;', id: 'gravy' %>
        <%= link_to "Drink", {:controller => "chefs", :action => "index", :menu_type => "drink"}, class: 'list-group-item special', :onclick => "Filter.applyType('drink', '#drink', #{session[:location_id]});return false;", id: 'drink' %>
      </div>
    </div>
  </div>
  <div class='col-xs-6 has-above-50'>
    
<!-- -->
      <%= render partial: 'menu' %>
    
  </div>
  <div class='col-xs-3'>
      <div class='summary has-above-50'>
      <div class='notice fade in'>
        *Free delivery over 100 Rs
      </div>
      <div class=''><b>Your order</b></div>
        <div id="cart">
          <%= render partial: 'table', locals:{show_button: true} %>
        </div>
      </div>
      <div class="checkout ">
      <%= form_tag(new_order_path, :method=>'get', :multipart => true) do %>
        <%= label_tag 'Cooking Instruction' %>
        <%= text_area_tag 'instruction', nil, class: 'form-control', :cols => 10, :rows => 5 %>
        <% if current_user %>
          <%= submit_tag 'Checkout', class: 'btn btn-md btn-success has-above'%>
        <% else %>
        <!-- <//button class='btn btn-md btn-success header right' onclick="Order.signinAlert();return false;">Checkout</button> -->
          <%#= link_to "Checkout", '#', :onclick => "Order.signinAlert();return false;", class: 'btn btn-md btn-success right'%>

          <%= submit_tag 'Checkout', :onclick => "Order.signinAlert();return false;", class: 'has-above btn btn-md btn-success' %>
        <% end %>
        <% end %>
      </div>
  </div>
</div>
  <% end %>
</div>


<%= render partial: 'layouts/footer' %>
</body>
